<div class="container">

    <div class="row">
        <h1 style="text-align: center;">Add New Comment to <%= campData.name %></h1>
        <div id="new-form" style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%= campData._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <%# <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="author">
                </div>%>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit Comment</button>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
    </div>

</div>


