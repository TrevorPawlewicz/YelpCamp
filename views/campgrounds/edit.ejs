<div class="container">

    <div class="row">
        <h1 style="text-align: center;">
            Edit <%= campData.name %>
        </h1>

        <div id="new-form">
            <form action="/campgrounds/<%= campData._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="editCamp[name]" value="<%= campData.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="editCamp[image]" value="<%= campData.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="editCamp[description]" value="<%= campData.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
    </div>

</div>


