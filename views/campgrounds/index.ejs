<% include ../partials/header %> <!-- to include partials header -->
<!-- ______^partial header^______navbar location____________________________-->


<div class="container"> <!-- container for added space around div -->

    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds!</p>
            <p>
                <a class="btn btn-primary btn-lrg"
                   href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>

    <!-- _____________________________images________________________________-->
    <div class="row text-center">
        <% campData.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campground.image %>">
                    <div class="caption">
                        <h3><%= campground.name %></h3>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }) %>
    </div>
    <!-- _____________________________images________________________________-->
</div>

<!-- _____________________________partial footer___________________________ -->
<% include ../partials/footer %> <!-- to include partials footer -->
